<UserControl x:Class="AmiBroker.Plugin.Controls.RightClickMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Connect" Click="Connect_Click" />
            <MenuItem Header="Disconnect" Click="Disconnect_Click" IsEnabled="False" />
            <Separator />
            <MenuItem Header="Update symbol list" Click="UpdateSymbolList_Click" />
            <MenuItem Header="Update Top 50 watchlist" Click="UpdateTop50_Click" />
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>
